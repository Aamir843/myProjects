
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

<div class="container"   >
    <br>
    <div class="container" id="heading" style="background-color:chocolate ; color:white ; font-size:larger " > Find Result</div>
    
    <form  action="/search" style="margin-top:40px" >
        <div class="form-row"  >
            <div class="form-group col-md-6">
                <label for="DateOfBirth">Date Of Birth</label>
                <input required type="date"  name="DateOfBirth" class="form-control" placeholder="Enter DateOfBirth">                    
            </div>

            <br>

            
            <div class="form-group col-md-6">
                <label for="RollNo">Roll Number</label>
                <input required type="number" min="1" max="50" class="form-control" name="RollNo" placeholder="Enter RollNumber">                
            </div>


            <br>

            <a <button id="back" class="btn btn-secondary "  href="/" >Back</button> </a>

            <a href="/student" <button class="btn btn-secondary"  >Clear</button> </a>


            <button style="margin-left:20px"   type="submit" class="btn btn-primary">Search</button>

            <br>

            {{#if notfound}}
            <h6 class="alert alert-danger" role="alert">Result Not Found! Please Enter Valid Details</h6>
            {{/if}}
                
                

            


            


        </div>



    </form>
</div>